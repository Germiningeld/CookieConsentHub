.cookie-consent-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(5px);
  -webkit-backdrop-filter: blur(5px);
  z-index: 9998;
  display: none;
}

.cookie-consent {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 9999;
  background: #fff;
  color: #333;
  border-radius: 12px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  max-width: 500px;
  width: 90%;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease-in-out, visibility 0.3s ease-in-out;
}

.cookie-consent--visible {
  opacity: 1;
  visibility: visible;
}

.cookie-consent__content {
  padding: 30px;
}

.cookie-consent__title {
  margin: 0 0 15px;
  font-size: 1.5rem;
  font-weight: 600;
  color: #333;
}

.cookie-consent__description {
  margin: 0 0 25px;
  font-size: 1rem;
  line-height: 1.6;
  color: #666;
}

.cookie-consent__buttons {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.cookie-consent__button {
  padding: 12px 20px;
  border: none;
  border-radius: 8px;
  font-size: 1rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
  text-align: center;
}

.cookie-consent__button--all {
  background: #007bff;
  color: #fff;
}

.cookie-consent__button--all:hover {
  background: #0056b3;
}

.cookie-consent__button--necessary {
  background: #f5f5f5;
  color: #333;
}

.cookie-consent__button--necessary:hover {
  background: #e0e0e0;
}

.cookie-consent__button--settings {
  background: transparent;
  color: #007bff;
  border: 1px solid #007bff;
}

.cookie-consent__button--settings:hover {
  background: rgba(0, 123, 255, 0.1);
}

.cookie-consent__button--selected {
  background: #f5f5f5;
  color: #333;
}

.cookie-consent__button--selected:hover {
  background: #e0e0e0;
}

.cookie-consent__button--close {
  background: #f5f5f5;
  color: #333;
}

.cookie-consent__button--close:hover {
  background: #e0e0e0;
}

/* Стили для настроек */
.cookie-consent__categories {
  display: none;
  margin-bottom: 20px;
  padding: 20px;
  background: rgba(0, 0, 0, 0.02);
  border-radius: 8px;
}

.cookie-consent__categories--visible {
  display: block;
}

.cookie-consent__category {
  margin-bottom: 15px;
}

.cookie-consent__category:last-child {
  margin-bottom: 0;
}

.cookie-consent__checkbox {
  display: flex;
  align-items: center;
  cursor: pointer;
}

.cookie-consent__checkbox input[type="checkbox"] {
  margin-right: 10px;
}

.cookie-consent__category-title {
  font-weight: 500;
  margin-bottom: 5px;
}

.cookie-consent__category-description {
  font-size: 0.9rem;
  color: #666;
}

/* Стили для второго баннера */
.cookie-consent--secondary {
  max-width: 400px;
}

.cookie-consent--secondary .cookie-consent__buttons {
  flex-direction: column;
  gap: 12px;
}

@media (max-width: 768px) {
  .cookie-consent {
    width: 95%;
  }

  .cookie-consent__content {
    padding: 20px;
  }
}

.cookie-consent--top {
  top: 0;
  bottom: auto;
}
.cookie-consent--bottom {
  top: auto;
  bottom: 0;
}
.cookie-consent--dark {
  background: #333;
  color: #fff;
  border-color: #444;
}
.cookie-consent--dark .cookie-consent__categories {
  background: rgba(255, 255, 255, 0.05);
}
.cookie-consent--dark .cookie-consent__button--necessary {
  background: #444;
  color: #fff;
}
.cookie-consent--dark .cookie-consent__button--necessary:hover {
  background: #555;
}
.cookie-consent--dark .cookie-consent__button--settings {
  color: #fff;
  border-color: #fff;
}
.cookie-consent--dark .cookie-consent__button--settings:hover {
  background: rgba(255, 255, 255, 0.1);
}

.cookie-consent__link {
  color: #666;
  text-decoration: none;
  font-size: 1rem;
  font-weight: 500;
  padding: 12px 20px;
  border-radius: 8px;
  transition: all 0.2s ease;
}

.cookie-consent__link:hover {
  color: #333;
  text-decoration: underline;
}

.cookie-consent__link--settings {
  margin-left: 0;
}

